# ─────────────────────────────────────────────────────────────────────────────
# ZeroWall — Environment Variables
# Copy this to .env and fill in your values
# ─────────────────────────────────────────────────────────────────────────────

# ── Target App ───────────────────────────────────────────────────────────────
TARGET_PORT=8000
APP_VERSION=v1.0.0-ORIGINAL
DEPLOY_HASH=aabbcc001122

# ── Triton Inference Server ───────────────────────────────────────────────────
TRITON_HOST=localhost
TRITON_HTTP_PORT=8080
TRITON_GRPC_PORT=8081
TRITON_METRICS_PORT=8082

# ── vLLM Inference Server ─────────────────────────────────────────────────────
VLLM_HOST=localhost
VLLM_PORT=8088
VLLM_MODEL=microsoft/phi-2
VLLM_TP_SIZE=1
HF_TOKEN=your_huggingface_token_here
MODEL_CACHE_DIR=~/.cache/huggingface

# ── ZeroWall Core ────────────────────────────────────────────────────────────
OPENCLAW_PORT=9000

# ── Dashboard ────────────────────────────────────────────────────────────────
DASHBOARD_PORT=8501

# ── RAPIDS ───────────────────────────────────────────────────────────────────
# Set to true on DGX Spark (has RAPIDS installed), false for CPU-only dev
RAPIDS_ENABLED=true

# ── Defense Cycle ────────────────────────────────────────────────────────────
# Number of mutation candidates to generate per cycle
MUTATION_CANDIDATE_COUNT=10
# Max parallel exploit replay workers
EXPLOIT_WORKERS=4

# ── Benchmark ────────────────────────────────────────────────────────────────
BENCHMARK_BURST_SIZE=50
BENCHMARK_CONCURRENCY=8
